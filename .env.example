# Example environment variables for almacen-backend
# Copy this file to `.env` and fill in real values. DO NOT commit your `.env` file.

# Supabase / Postgres connection URL (include username & password)
# Format: postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.ehpssgacrncyarzxogmv.supabase.co:5432/postgres

# Optional: force SSL for DB even if NODE_ENV is not 'production'
# Set to 'true' if needed by your provider
DB_FORCE_SSL=false

# Node environment
NODE_ENV=development

# Other DB env vars (optional, used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=almacen
